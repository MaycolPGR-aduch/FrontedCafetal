{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",                       // <-- importante
    "paths": { "@/*": ["src/*"] },        // <-- alias para TS
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "references": []
}
